<?xml version="1.0" ?>
<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="cmd_vel_topic"     default="/cmd_vel" />
  <arg name="odom_topic"        default="odom" />
  <arg name="move_forward_only" default="true"/>
  <arg name="DWA"               default="false"/>


  <!-- move_base -->

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" launch-prefix="xterm -hold -e">
      <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
      <rosparam file="$(find mobile-robotics_2024)/config/costmap_common_params_burger.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find mobile-robotics_2024)/config/costmap_common_params_burger.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find mobile-robotics_2024)/config/Global_Planner.yaml" command="load" ns="GlobalPlanner" />
      <rosparam file="$(find mobile-robotics_2024)/config/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find mobile-robotics_2024)/config/global_costmap_params.yaml" command="load" />
      <rosparam file="$(find mobile-robotics_2024)/config/move_base_params.yaml" command="load" />
      <rosparam file="$(find mobile-robotics_2024)/config/dwa_local_planner_params_burger.yaml" command="load" />
      
      <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
      <remap from="odom" to="$(arg odom_topic)"/>
      <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
    </node>

  
</launch>
